@using Factory.Models;

@{
    ViewData["Title"] = "Machines";
}

<div class="container">
  <div class="text-center">
    <h1 class="display-4">Machines</h1>
  </div>
  <div class="container p-5">
    @Html.ActionLink("Add New Machine", "Create", "Machines", null, new { @class = "btn btn-block btn-info" })
  </div>
  <div class="container content">
    @if (@Model.Count == 0)
    {
      <h3>No Machines have been registered yet.</h3>
    }
    else
    {
      <div class="container d-flex flex-column">
        @foreach (Machine mach in Model)
        {
          <div class="p-2 m-2">
            @Html.ActionLink($"{mach.Name}", "Details", "Machines", new { id = mach.MachineId }, new { @class = "btn btn-block btn-primary" })
          </div>
        }
      </div>
    }
  </div>
</div>
