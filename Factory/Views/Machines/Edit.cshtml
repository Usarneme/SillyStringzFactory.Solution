@model Factory.Models.Machine;

@{
    ViewData["Title"] = "Machines";
}

<div class="container">
  <div class="text-center">
    <h1 class="display-4">Machines - Edit - @Model.Name</h1>
  </div>
  <div class="container content">
    <div class="form-container d-flex flex-column">
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.MachineId)

        <div class="form-group">
          @Html.LabelFor(model => model.Name)
          @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @required = "required", @class = "form-control" } })
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.Description)
          @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @required = "required", @class = "form-control" } })
        </div>

        <div class="form-group">
          @Html.Label("Installation Date")
          @Html.EditorFor(model => model.InstallationDate, "date", @Model.InstallationDate.ToShortDateString(), new { htmlAttributes = new { @type = "date", @required = "required", value = @Model.InstallationDate.ToShortDateString(), @class = "form-control" } })
        </div>

        <div class="form-group">
          @Html.Label("Licensed Engineers")
          @Html.DropDownList("EngineerId", null, new { @class = "form-control" })
        </div>

        <input type="submit" class="btn btn-block btn-primary" value="Save" />
      }
    </div>
  </div>
</div>
