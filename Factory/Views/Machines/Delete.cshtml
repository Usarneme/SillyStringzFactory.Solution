@model Factory.Models.Machine;

@{
    ViewData["Title"] = "Machines";
}

<div class="container">
  <div class="text-center">
    <h1 class="display-4">Machines - Delete</h1>
  </div>
  <div class="container content">
    <h3>Are you sure you want to delete "@Model.Name"?</h3>
    @using (Html.BeginForm())
    {
      @Html.Hidden("id", @Model.MachineId)
      <input type="submit" value="Permanently Delete" class="btn btn-block btn-danger" />
    }
  </div>
</div>
