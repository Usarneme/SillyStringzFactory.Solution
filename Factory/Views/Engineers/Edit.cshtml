@model Factory.Models.Engineer;

@{
    ViewData["Title"] = "Engineers";
}

<div class="container">
  <div class="text-center">
    <h1 class="display-4">Engineers - Edit - @Model.Name</h1>
  </div>
  <div class="container content">
    <div class="form-container d-flex flex-column">
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.EngineerId)

        <div class="form-group">
          @Html.LabelFor(model => model.Name)
          @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @required = "required", @class = "form-control" } })
        </div>

        <div class="form-group">
          @Html.Label("Hire Date")
          @Html.EditorFor(model => model.HireDate, "date", @Model.HireDate.ToShortDateString(), new { htmlAttributes = new { @type = "date", @required = "required", value = @Model.HireDate.ToShortDateString(), @class = "form-control" } })
        </div>

        <div class="form-group">
          @Html.Label("Licensed Machines")
          @Html.DropDownList("MachineId", null, new { @class = "form-control" })
        </div>

        <input type="submit" class="btn btn-block btn-primary" value="Save" />
      }
    </div>
  </div>
</div>
