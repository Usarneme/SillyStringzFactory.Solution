@using Factory.Models;

@{
    ViewData["Title"] = "Engineers";
}

<div class="container">
  <div class="text-center">
    <h1 class="display-4">Engineers</h1>
  </div>
  <div class="container p-5">
    @Html.ActionLink("Add New Engineer", "Create", "Engineers", null, new { @class = "btn btn-block btn-info" })
  </div>
  <div class="container content">
    @if (@Model.Count == 0)
    {
      <h3>No Engineers have been registered yet.</h3>
    }
    else
    {
      <ul>
      @foreach (Engineer eng in Model)
      {
        <li>
          @Html.ActionLink($"{eng.Name}", "Details", "Engineers", new { id = eng.EngineerId }, new { @class = "btn btn-block btn-primary" })
        </li>
      }
      </ul>
    }
  </div>
</div>
