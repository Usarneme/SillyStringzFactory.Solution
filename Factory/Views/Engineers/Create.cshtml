@model Factory.Models.Engineer;

@{
    ViewData["Title"] = "Engineers";
}

<div class="container">
  <div class="text-center">
    <h1 class="display-4">Engineers - Add New</h1>
  </div>
  <div class="container content">
    <div class="form-container d-flex flex-column">
      @using (Html.BeginForm())
      {
        <div class="form-group">
          @Html.LabelFor(model => model.Name)
          @Html.TextBoxFor(model => model.Name, new { @required = "required" })
        </div>

        <div class="form-group">
          @Html.Label("Hire Date")
          @Html.TextBoxFor(model => model.HireDate, new { @type = "date", @required = "required" })
        </div>

        <input type="submit" value="Add Engineer" class="btn btn-block btn-primary" />
      }
    </div>
  </div>
</div>
